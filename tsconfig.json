{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "removeComments": false,
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test"
  ]
}
